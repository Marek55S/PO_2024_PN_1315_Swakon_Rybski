<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.MainWindowPresenter">
    <top>
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="infolabel" textAlignment="CENTER"/>
        </VBox>
    </top>
    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="moveslisttextfield"/>
            <Label fx:id="movedescription" textAlignment="CENTER"/>
            <Button fx:id="startButton" onAction="#onSimulationStartClicked" text="Start"/>
        </VBox>
    </bottom>
</BorderPane>
