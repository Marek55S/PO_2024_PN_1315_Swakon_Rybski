<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <top>
        <VBox>
            <TextField fx:id="arguments" />
            <Label fx:id="moveDescription" text = "Move description will be here" />
        </VBox>
    </top>
    <center>
        <GridPane fx:id="mapGrid" gridLinesVisible="true"/>
    </center>
    <bottom>
        <HBox>
            <Button fx:id="startButton" text="Start" textAlignment="CENTER" onAction="#onSimulationStartClicked"/>
        </HBox>
    </bottom>
</BorderPane>
